@model IEnumerable<KnowledgeHubPortal.Domain.Entities.Article>

@{
    ViewData["Title"] = "Browse";
}

<h1>Browse Articles</h1>
<hr />
<div class="container bg-info p-3 ">
    <div class="row">
        <div class="col">
            <form asp-action="Browse" asp-controller="Articles" method="post">
                Select Catagory: <select name="catagoryId" asp-items="@ViewBag.Catagories"></select>
                <button type="submit">Search</button>
            </form>
        </div>
        <div class="col">
            <div class=" container align-content-end">
                
                <partial name="_SearchArticlePartial" />

            </div>
        </div>
    </div>
   
</div>
<hr />




<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.PostedBy)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Catagory.Name)
            </th>


        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                <a href="@item.ArticleURL" target="_blank">@item.Title</a>
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PostedBy)
            </td>
            <td>
                @item.Catagory.Name
            </td>

        </tr>
}
    </tbody>
</table>
