@model KnowledgeHubPortal.Domain.Entities.Catagory

<h2>Create Catagory</h2>
<hr />

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<form action="/Catagories/Save" method="post">


    <input type="text" asp-for="Name" placeholder="Enter Catagory Name" />
    <span asp-validation-for="Name"></span><br />
    <textarea rows="6" cols="60" asp-for="Description"></textarea>

    <span asp-validation-for="Description"></span> <br />
    <input type="submit" name="btnSubmit" value="Create" />




</form>





