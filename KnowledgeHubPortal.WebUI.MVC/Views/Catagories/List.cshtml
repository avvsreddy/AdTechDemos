<table class="table  table-bordered bg-info" >
    <tr>
        <th> Catagory Name </th>
        <th> Description </th>
    </tr>

    @foreach (var cat in Model)
    {
        <tr>
            <td>@cat.Name</td>
            <td>@cat.Description</td>
        </tr>
    }


</table>

