@model List<KnowledgeHubPortal.Domain.Entities.Catagory> 



<h2>Catagories List (@Model.Count)</h2>
<hr />
@if (TempData["Message"] != null && TempData["Message"].ToString().Length > 0)
{
<div class="alert alert-primary" role="alert">
    @TempData["Message"]
</div>
}

